<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.RecommendDAO">
	<!-- 추천기록 조회 -->
	<select id="checkRecommend" parameterType="Map" resultType="int">
		select count(*)
		  from ssh_build_recommend
		 where build_no = #{buildNo} and user_no = #{userNo}
	</select>
	<!-- 추천 기록 -->
	<insert id="insertRecommend" parameterType="Map">
		insert into ssh_build_recommend(build_no, user_no)
		values(#{buildNo}, #{userNo})
	</insert>
</mapper>